# Application Settings
APP_NAME=Hemoglobin Estimation API
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# File Storage
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed
MODEL_DIR=./data/models
MAX_UPLOAD_SIZE_MB=8

# Model Paths
UNET_MODEL_PATH=./data/models/unet_v1.0.0.h5
HB_MODEL_PATH=./data/models/hb_predictor_v1.0.0.h5

# Quality Control Thresholds
QC_MIN_SHARPNESS=30.0
QC_MIN_BRIGHTNESS=50.0
QC_MAX_BRIGHTNESS=220.0
QC_MIN_CONTRAST=15.0
QC_MAX_GLARE_COVERAGE=0.15

# Preprocessing Settings
TARGET_SIZE=512
ROI_SIZE=256
RANDOM_SEED=42

# Prediction Settings
MC_DROPOUT_PASSES=10
UNCERTAINTY_THRESHOLD=0.7
CONFIDENCE_LEVEL=0.95

# Anemia Thresholds (WHO guidelines, g/dL)
ANEMIA_THRESHOLD_NORMAL=12.0
ANEMIA_THRESHOLD_MILD=11.0
ANEMIA_THRESHOLD_MODERATE=8.0

# Database
DATABASE_URL=sqlite:///./data/hemoglobin.db

# Security
ENCRYPTION_KEY=your-secret-key-here-change-in-production
ENABLE_ENCRYPTION=False

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
